<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIMock.LoginPage"
             Title="LoginPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="logo.png" Aspect="AspectFit" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="Center" />

        <VerticalStackLayout Grid.Row="1" Spacing="10">

            <Label Text="Log ind" FontSize="20" TextColor="Black" FontAttributes="Bold" Margin="0,0,0,20"
                   HorizontalOptions="Center"/>

            <Label Text="Din Email"/>

            <Entry Placeholder="din@gmail.com" Text="{Binding Email}" Keyboard="Email" />

            <Label Text="Adgangskode"/>

            <Entry Placeholder="Adgangskode" Text="{Binding UserPassword}" IsPassword="True"/>

            <Label Text="Glemt Adgangskode?" HorizontalOptions="End" TextColor="Gray" FontSize="Small"/>

            <Button Text="Log ind" BackgroundColor="#e8bc65" Margin="0,10,0,0" Command="{Binding ICommandNavToHomePage}"/>

            <Button Text="Register" BackgroundColor="#e8bc65" Margin="0,10,0,0" Command="{Binding IOpenRegistration}"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
